---
import { Button } from "./ui/button";
---

<header class="bg-white border-b border-gray-200">
  <div class="container mx-auto px-4 py-3 max-w-6xl">
    <div class="flex items-center justify-between">
      <div class="flex items-center space-x-6">
        <a href="/" class="flex items-center space-x-2">
          <div class="w-8 h-8 bg-[#5CEBA1] text-white rounded flex items-center justify-center font-bold">D</div>
          <span class="text-xl font-bold">Directory<span class="text-[#5CEBA1]">.io</span></span>
        </a>
        <nav class="hidden md:flex items-center space-x-6">
          <a href="/explore" class="text-gray-600 hover:text-gray-900">Explore</a>
          <a href="/playground" class="text-gray-600 hover:text-gray-900">Playground</a>
          <a href="/feed" class="text-gray-600 hover:text-gray-900">Feed</a>
          <a href="/user-cases" class="text-gray-600 hover:text-gray-900">User Cases</a>
          <a href="/hosting" class="text-gray-600 hover:text-gray-900">Hosting</a>
        </nav>
      </div>
      <div class="flex items-center space-x-3">
        <div class="relative">
          <select class="appearance-none bg-white border border-gray-200 rounded-md px-3 py-1.5 pr-8 focus:outline-none focus:ring-2 focus:ring-[#5CEBA1]">
            <option>English</option>
            <option>Spanish</option>
            <option>French</option>
          </select>
          <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-2 text-gray-500">
            <svg class="h-4 w-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" />
            </svg>
          </div>
        </div>
        <Button asChild>
          <a href="/submit">Submit</a>
        </Button>
        <Button variant="outline" asChild>
          <a href="/sign-in">Sign In</a>
        </Button>
      </div>
    </div>
  </div>
</header>
